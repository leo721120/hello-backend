{
  "$schema": "https://json.schemastore.org/package",
  "name": "@io/backend",
  "type": "commonjs",
  "version": "0.0.0",
  "license": "MIT",
  "description": "template for backend service",
  "scripts": {
    "dockerbuild": "docker build . -t io/backend:%npm_package_version%",
    "release": "pkg -C gzip -c ./package.json -o ./bin/main app/main.js",
    "prepare": "husky install",
    "redoc": "redoc-cli build ./app/openapi.yml -o ./app/openapi.html",
    "build": "tsc -p tsconfig.out.json",
    "clean": "tsc -b --clean",
    "cmake": "cmake-js",
    "start": "ts-node app/main",
    "wasm": "asc --config ./lib/wasm/asconfig.json",
    "init": "dapr uninstall && dapr init",
    "dapr": "dapr run -a devapp -H 3500 -p 58088 -c ./cnf/dapr/config.yml -- ts-node app/main",
    "test": "jest",
    "mock": "prism mock",
    "mock/app": "prism mock ./app/openapi.yml",
    "mock/apphub": "prism mock ./app/apphub/openapi.yml"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^4.11.1",
    "@types/amqplib": "^0.10.1",
    "@types/autocannon": "^7.9.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.8.5",
    "@types/node-forge": "^1.3.2",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.11",
    "@types/traceparent": "^1.0.0",
    "@types/ws": "^8.5.3",
    "assemblyscript": "^0.27.3",
    "autocannon": "^7.10.0",
    "cmake-js": "^7.1.1",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dapr-client": "^3.0.0",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "jest-cucumber": "^3.0.1",
    "mongodb-memory-server": "^8.12.2",
    "nan": "^2.17.0",
    "nock": "^13.2.9",
    "node-addon-api": "^6.1.0",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^12.0.0",
    "pkg": "^5.8.0",
    "redoc-cli": "^0.13.7",
    "sqlite3": "^5.1.4",
    "supertest": "^6.2.2",
    "testcontainers": "^9.1.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@io/app": "file:app",
    "@io/lib": "file:lib",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.3.6",
    "cloudevents": "^6.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "express-ws": "^5.0.2",
    "fido2-lib": "^3.3.5",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.1",
    "hash-wasm": "^4.9.0",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "mongodb": "^5.2.0",
    "nanoid": "^3.3.4",
    "node-apk": "^1.2.1",
    "pg": "^8.7.3",
    "pino": "^8.4.2",
    "sequelize": "^6.17.0",
    "traceparent": "^1.0.0",
    "yaml": "^2.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "maxWorkers": "33%",
    "testTimeout": 30000,
    "logHeapUsage": true,
    "slowTestThreshold": 5,
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./.coverage",
    "coverageThreshold": {
      "global": {
        "lines": 60,
        "branches": 50,
        "functions": 60,
        "statements": 50
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pkg": {
    "scripts": [
      "./node_modules/axios/dist/node/axios.cjs"
    ],
    "assets": [
      "./app/openapi.html",
      "./app/openapi.yml",
      "./logo.ico"
    ]
  }
}
