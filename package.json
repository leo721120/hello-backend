{
  "$schema": "https://json.schemastore.org/package",
  "name": "@io/backend",
  "version": "0.0.0",
  "license": "MIT",
  "description": "template for backend service",
  "scripts": {
    "dockerbuild": "docker build . -t io/backend:%npm_package_version%",
    "release": "pkg -c ./package.json -o ./out/main app/main.js",
    "prepare": "husky install",
    "redoc": "redoc-cli build ./app/openapi.yml -o ./app/openapi.html",
    "build": "tsc -p tsconfig.out.json",
    "clean": "tsc -b --clean",
    "start": "ts-node app/main",
    "init": "dapr uninstall && dapr init",
    "dapr": "dapr run -a devapp -H 3500 -p 58088 -d ./cnf/dapr -- ts-node app/main",
    "test": "jest"
  },
  "devDependencies": {
    "@types/autocannon": "^7.9.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.8.5",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.11",
    "@types/traceparent": "^1.0.0",
    "@types/ws": "^8.5.3",
    "autocannon": "^7.10.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dapr-client": "^2.5.0",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "jest-cucumber": "^3.0.1",
    "nock": "^13.2.9",
    "node-mocks-http": "^1.11.0",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^12.0.0",
    "pkg": "^5.8.0",
    "redoc-cli": "^0.13.7",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@io/app": "file:app",
    "@io/ctx": "file:ctx",
    "@io/lib": "file:lib",
    "ajv": "^8.10.0",
    "ajv-formats": "^2.1.1",
    "axios": "^0.27.2",
    "cloudevents": "^6.0.2",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "fs-extra": "^10.1.0",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mime": "^3.0.0",
    "nanoid": "^3.3.4",
    "pg": "^8.7.3",
    "pino": "^8.4.2",
    "sequelize": "^6.17.0",
    "traceparent": "^1.0.0",
    "yaml": "^2.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "maxWorkers": "33%",
    "testTimeout": 10000,
    "logHeapUsage": true,
    "slowTestThreshold": 5,
    "testEnvironment": "node",
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "./.coverage",
    "coverageThreshold": {
      "global": {
        "lines": 60,
        "branches": 50,
        "functions": 60,
        "statements": 50
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pkg": {
    "assets": [
      "app/openapi.html",
      "logo.ico"
    ]
  }
}